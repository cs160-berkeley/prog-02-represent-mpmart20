<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:descendantFocusability="blocksDescendants"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.28"
        android:id="@+id/myCard"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/myPhoto"
            android:scaleType="centerCrop"
            android:background="#000000"
            android:layout_margin="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/committee"
            android:layout_alignTop="@+id/myPhoto"
            android:layout_toEndOf="@+id/myPhoto"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/name"
            android:layout_below="@+id/committee"
            android:layout_alignStart="@+id/committee"
            android:layout_marginBottom="2dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Party"
            android:id="@+id/textView3"
            android:layout_below="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:textStyle="bold"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/party"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="2dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/textView4"
            android:layout_below="@+id/party"
            android:layout_alignStart="@+id/party"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textStyle="bold"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/email"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:textSize="12dp"
            android:autoLink="email"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:id="@+id/textView5"
            android:layout_below="@+id/email"
            android:layout_alignStart="@+id/email"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/website"
            android:autoLink="web"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Latest Tweet"
            android:id="@+id/textView6"
            android:layout_below="@+id/website"
            android:layout_alignStart="@+id/website"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="16dp"

            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Loading Tweet..."
            android:id="@+id/tweet"
            android:autoLink="web"

            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:textSize="12dp" />

    </RelativeLayout>

</LinearLayout>